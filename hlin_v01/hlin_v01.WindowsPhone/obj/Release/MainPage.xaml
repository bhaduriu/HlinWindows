<Page
    x:Class="hlin_v01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:hlin_v01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition Width="0.15*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.15*" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid x:Name="header" Grid.Row="0" Grid.ColumnSpan="3" Background="#3bb1ee"></Grid>

        <Image x:Name="logo" Grid.Column="0" Grid.Row="0" Source="Assets/logo_test.png"/>

        <Button x:ConnectionId='1' x:Name="lock_1" FontSize="38"  Grid.Column="1"  Grid.Row="2" Content="Lock" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"                      Style="{StaticResource ButtonStyle1}" Background="#3bb1ee" />
        <Button x:ConnectionId='2' x:Name="receive"   FontSize="38" Grid.Column="1"  Grid.Row="4" Content="Receive" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"                       Style="{StaticResource ButtonStyle1}" Background="#3bb1ee"/>

        <Grid Grid.Row="6" Grid.ColumnSpan="3" Background="#3bb1ee"></Grid>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="6" Grid.ColumnSpan="3" >
        <AppBarButton x:ConnectionId='3' Icon="LeaveChat" Label="Feedback"                             />
        <AppBarButton x:ConnectionId='4' Icon="Caption" Label="Current Version"                           />
        <AppBarButton x:ConnectionId='5' Icon="Help" Label="About HLIN"                             />
        <AppBarButton x:ConnectionId='6' Icon="Save" Label="My Access Key's"                             />
    </StackPanel>
    </Grid>

</Page>

